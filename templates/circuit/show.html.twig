{% extends 'base.html.twig' %}

{% block title %}Circuit{% endblock %}

{% block body %}
    <h1>Circuit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ circuit.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ circuit.image }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ circuit.title }}</td>
            </tr>
            <tr>
                <th>Locality</th>
                <td>{{ circuit.locality }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ circuit.content }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ circuit.createdAt ? circuit.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified_at</th>
                <td>{{ circuit.modifiedAt ? circuit.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_circuit_index') }}">back to list</a>

    <a href="{{ path('app_circuit_edit', {'id': circuit.id}) }}">edit</a>

    {{ include('circuit/_delete_form.html.twig') }}
{% endblock %}
