<head>
    {% block stylesheets %}
        <link rel="stylesheet" href="/css/style.css" />
    {% endblock %}

    {% block title %}
        <title>Filtre</title>
    {% endblock %}

    <link rel="icon" href="/image/favicon.png">
</head>

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ filter.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ filter.name }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ filter.createdAt ? filter.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified_at</th>
                <td>{{ filter.modifiedAt ? filter.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_filter_index') }}">back to list</a>

    <a href="{{ path('app_filter_edit', {'id': filter.id}) }}">edit</a>

    {{ include('filter/_delete_form.html.twig') }}
{% endblock %}
